#!/bin/sh
ssh ubuntu@172.31.41.190 <<EOF
    sudo apt-get update
    cd ~/frisklog-server
    git pull
    wget -qO- https://raw.githubusercontent.com/creationix/nvm/v0.33.6/install.sh | bash
    nvm ls-remote
    nvm install v16.16.0
    npm install
    npm install -g pm2
    pm2 stop frisklog-server
    npm run build
    pm2 restart frisklog-server
    exit
EOF