#!/bin/sh
ssh ubuntu@172.31.41.190 <<EOF
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.3/install.sh | bash
    source ~/.bash_profile
    nvm install --lts
    cd frisklog-server
    git pull
    sudo npm install
    npm install -g pm2
    pm2 delete frisklog-server
    sudo npm run build
    pm2 start npm --name frisklog-server -- start
    exit
EOF